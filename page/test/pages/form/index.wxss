.form-group{
  border-bottom:1rpx solid #D9D9D9;
  border-top:1rpx solid #D9D9D9;
  background-color: #fff;
}
.form-group .form-item:nth-last-child(1){
  border: none;
}
.form-item{
  height: 80rpx;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  -webkit-box-align:center;
  -webkit-align-items:center;
  align-items:center;
  margin-left: 30rpx;
  padding-right: 30rpx;
  border-bottom:1rpx solid #D9D9D9;
}
.form-item>view{
  height: 50rpx;
  line-height: 50rpx;
}
.form-item-hd{
  width: 180rpx;
}
.form-item-bd{
  -webkit-box-flex:1;
  -webkit-flex:1;
  flex:1;
  
}
.form-item-bd input{
     height: 100%;
  }